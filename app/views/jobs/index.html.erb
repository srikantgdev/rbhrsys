<% if notice.present? %> 
  <p class="alert alert-success">
    <%= notice %>
  </p>
<% end %>

<div>
  <%= Job.inspect %>
</div>

<div class="d-flex mt-4 align-items-center">
  <div class="h3 me-auto">Jobs</div>
  <%= link_to "New job", new_job_path, class: "btn btn-info" %>
</div>

<div id="jobs">
  <% @jobs.each do |job| %>
    <%= render job %>
  <% end %>
</div>

