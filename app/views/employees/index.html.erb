<p style="color: green"><%= notice %></p>

<h1>Employees</h1>

<div id="employees">
  <table class="table table-striped table-hover">
    <thead class="bg-dark text-white">
      <tr>
        <td>Full name</td>
        <td>Phone</td>
        <td>Manager</td>
        <td>Role</td>
        <td>Actions</td>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <%= render employee %>
      <% end %>
    <tbody>
  </table>
</div>

<%= link_to "New employee", new_employee_path %>
